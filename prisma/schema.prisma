generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  created_at DateTime  @default(now())
  Booking    Booking[]

  @@map("users")
}

model Car {
  id          String  @id @default(uuid())
  model       String
  name        String
  description String
  price       Decimal
  imageUrl    String

  speed       Int
  up          Int
  type        String
  typeCambium String
  capacity    Int
  strength    String
  Booking     Booking[]

  @@map("cars")
}

model Booking {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  carId String
  car   Car    @relation(fields: [carId], references: [id])

  date DateTime

  @@map("bookings")
}
