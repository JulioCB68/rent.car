generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  created_at DateTime @default(now())

  @@map("users")
}

model Car {
  id          String  @id @default(uuid())
  model       String
  name        String
  description String
  price       Decimal
  imageUrl    String

  speed       Int
  up          Int
  type        String
  typeCambium String
  capacity    Int
  strength    String

  @@map("cars")
}
